{
  "compilerOptions": {
    "types": ["node"],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "ts-node": {
    "files": true
  }
}
